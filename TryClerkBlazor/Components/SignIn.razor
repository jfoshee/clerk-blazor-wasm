@inject IClerkAuthService AuthService
@inject IJSRuntime JS

@if (!isSignedIn)
{
    <div id="sign-in"></div>
}

@code {
    bool isSignedIn;
    bool mounted;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isSignedIn = await AuthService.IsUserSignedInAsync();
            StateHasChanged();

            if (!isSignedIn && !mounted)
            {
                await JS.InvokeVoidAsync("clerkInterop.mountSignIn", "#sign-in");
                mounted = true;
            }
        }
    }
}
