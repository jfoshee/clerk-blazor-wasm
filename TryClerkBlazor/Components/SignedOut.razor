@inject IClerkAuthService AuthService

@if (showContent)
{
    @ChildContent
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    bool showContent;

    protected override async Task OnInitializedAsync()
    {
        var isSignedIn = await AuthService.IsUserSignedInAsync();
        showContent = !isSignedIn;
    }
}
